<div class="header">
    <h1 class="header-logo">
      <i class="fas fa-home faa-bounce animated"></i>
      <%= link_to 'Home PAY!', "/expenses" ,class:"header-logo" %>
    </h1>
</div>
<div class="apoint">
  支出の登録
  <%=form_for(@expense, local: true, method: 'post')do |f| %>
    <%= f.collection_select :year_id, Year.all, :id, :name, {include_blank: "---"}, class: "input-form" %>
    <%= f.collection_select :month_id, Month.all, :id, :name, {include_blank: "---"}, class: "input-form" %>
    <%= f.collection_select :expensecategory_id, Expensecategory.all, :id, :name, {include_blank: "---"}, class: "input-form" %>
    <%= f.text_field :money, class: "expense-money", placeholder: "金額" %>

    <div class="submit-btn">
      <%= f.submit "登録！", class: "submit-btn" %>
    </div>
  <% end %>
</div>